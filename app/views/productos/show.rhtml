<% for column in Producto.content_columns %>
<p>
  <b><%= column.human_name %>:</b> <%=h @producto.send(column.name) %>
</p>
<% end %>
<p>
  <b>Periodo:</b> <%=h @producto.periodo.nombre %>
</p>
<p>
  <b>Grupo:</b> <%=h @producto.grupo.nombre %>
</p>


<%= button_to 'Editar', :action => 'edit', :id => @producto %>
<%= link_to 'Regresar', :action => 'list' %>
