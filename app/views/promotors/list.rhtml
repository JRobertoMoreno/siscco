<div class="page-title">
  <h1>PROMOTORES</h1>
  <span>
    <a href="/promotors/new"><img  id="agregar" src="/images/agregar.gif" title="Agregar Bancos" alt="Agregar Bancos" /></a>
  </span>
  <span style="color: #CF4421; font-size: 12px;" >&nbsp;<%= flash[:notice] %></span>
</div>

<table width="100%" border="0" cellspacing="1">
  <tr>
    <td>
      <table class="tabla" width="100%">
        <tr class="subtitulo">
          <td width="1%" class="bloque">&nbsp;</td>
          <td colspan="3" bgcolor="#E8E8E8">BUSQUEDA</td>
        </tr>
        <tr class="pregunta">
          <td>&nbsp;</td>
          <td width="15%">POR NOMBRE:</td>
          <td width="84%"><%= text_field_tag :searchtext, '', :class => 'text' %></td>
        </tr>
        <tr class="subtitulo">
          <td class="bloque">&nbsp;</td>
          <td colspan="2" bgcolor="#E8E8E8">RESULTADO DE LA BUSQUEDA:</td>
        </tr>
        <tr>
          <td>&nbsp;</td>
          <td colspan="2">
            <div id="scroll">
              <div id ="search_hits">
                    <table class="resultado" align="center">
                      <tr class="titulot"  bgcolor="#E8E8E8">
                        <td>Nombre</td>
                        <td>Dirección</td>
                        <td>Teléfono</td>
                        <td>Celular</td>
                        <th colspan="4">Acciones</th>
                      </tr>

                      <% for promotor in @promotors %>
                      <tr class="subtitulot">
                        <td><%= promotor.nombre_completo %></td>
                        <td><%= promotor.direccion %></td>
                        <td><%= promotor.telefono %></td>
                        <td><%= promotor.celular %></td>
                        <%unless promotor.creditos.empty?%>
                        <td>
                          <img src="/images/space.png" alt="" title="" border="0" />
                          <%= link_to image_tag("/images/credit.png"), {:action => 'show_creditos', :id => promotor}, {:title => "Creditos"}%>
                          <img src="/images/space.png" alt="" title="" border="0" />
                        </td>
                        <%else%>
                        <td>&nbsp;</td>
                        <%end%>
                        <td>
                          <img src="/images/space.png" alt="" title="" border="0" />
                          <%= link_to image_tag("/images/detail.png"), {:action => "show", :id => promotor}, {:title => "Detalles"}%>
                          <img src="/images/space.png" alt="" title="" border="0" />
                        </td>
                        <td>
                          <img src="/images/space.png" alt="" title="" border="0" />
                          <%= link_to image_tag("/images/edit.png"), {:action => "edit", :id => promotor}, {:title => "Editar"}%>
                          <img src="/images/space.png" alt="" title="" border="0" />
                        </td>
                        <td>
                          <img src="/images/space.png" alt="" title="" border="0" />
                          <%= link_to image_tag("/images/delete.png"), { :action => 'destroy', :id => promotor }, :confirm => 'Estas seguro?', :title => "Eliminar", :method => :post%>
                          <img src="/images/space.png" alt="" title="" border="0" />
                        </td>
                      </tr>
                      <% end %>
                    </table>
              </div>
            </div>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<%= observe_field(:searchtext,
                 :frequency => 0.05,
                 :update => :search_hits,
                 :with  => "searchtext",
                 :url => { :action => :live_search }) %>
