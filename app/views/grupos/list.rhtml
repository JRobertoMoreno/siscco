<h1>Grupos</h1>
<!--inicia ajax -->
<table>
  <tr>
    <td>
      <label for="searchtext">Búsqueda por referencia:</label>
        <%= text_field_tag :searchtext_referencia, '', :class => 'text' %>
        <%= observe_field(:searchtext_referencia,
                    :frequency => 0.15,
                    :update => :search_hits,
                    :with  => "searchtext_referencia",
                    :url => { :action => :live_search_referencia }) %>
    </td>
  </tr>
  <tr>
    <td>
      <label for="searchtext">Búsqueda por nombre:</label>
        <%= text_field_tag :searchtext, '', :class => 'text' %>
        <%= observe_field(:searchtext,
                   :frequency => 0.25,
                   :update => :search_hits,
                   :with  => "searchtext",
                   :url => { :action => :live_search }) %>
    </td>
  </tr>
</table>




<br /><br/><p>Resultados de la Busqueda: </p>
<div id="scroll">
  <div id="search_hits">
    <table>
      <tr>
        <td>
          <%=link_to "Mostrando solo los primeros 25 registros", :action => "list"%>
        </td>
        <td>
          <%=link_to "Ver todos", :action => "list", :token => "all"%>
        </td>
      </tr>
      <tr>
      <% for column in Grupo.content_columns %>
        <th><%= column.human_name %></th>
      <% end %>
        <th colspan="4">Acciones</th>
      </tr>
  
      <% for grupo in @grupos %>
      <tr>
        <% for column in Grupo.content_columns %>
        <td><%=h grupo.send(column.name) %></td>
        <% end %>
        <td><%= button_to 'Detalles', :action => 'show', :id => grupo %></td>
         <td><%= button_to 'Clientes', :action => 'agregar_clientes', :id => grupo %></td>
        <td><%= button_to 'Editar', :action => 'edit', :id => grupo %></td>
        <td><%= button_to 'Eliminar', { :action => 'destroy', :id => grupo }, :confirm => 'Estas seguro?', :method => :post %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<table  class="botones">
  <tr class="botones">
    <th class="botones"><h4><%= button_to 'Agregar Grupo', :action => 'new' %></h4></th>
  </tr>
</table>
