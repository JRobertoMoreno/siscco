<div id="scroll">
<table>
  <tr>
  <% for column in Subsector.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
    <th colspan="3">Acciones</th>
  </tr>

<% for subsector in @subsectors %>
  <tr>
  <% for column in Subsector.content_columns %>
    <td><%=h subsector.send(column.name) %></td>
  <% end %>
    <td><%= button_to 'Detalles', :action => 'show', :id => subsector %></td>
    <td><%= button_to 'Editar', :action => 'edit', :id => subsector %></td>
    <td><%= button_to 'Eliminar', { :action => 'destroy', :id => subsector }, :confirm => 'Estas seguro?', :method => :post %></td>
  </tr>
<% end %>
</table>
</div>